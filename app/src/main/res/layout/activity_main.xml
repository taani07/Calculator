<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     android:background="@drawable/background"
    tools:context="com.example.tanis.calculator.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Screen"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:textAlignment="viewEnd"
            android:text="0"
            android:textSize="60dp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/AllClear"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/buttons"
            android:text="@string/All_Clear"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />
        <Button
            android:layout_toRightOf="@+id/AllClear"
            android:id="@+id/positive_Negative"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:background="@drawable/buttons"
            android:text="@string/Positive_Negative"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/Root"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:background="@drawable/buttons"
            android:text="@string/Root"
            android:layout_toRightOf="@+id/positive_Negative"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/divison"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:background="@drawable/buttons"
            android:text="@string/Division"
            android:layout_toRightOf="@+id/Root"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:orientation="horizontal"


        >
        <Button
            android:id="@+id/Seven"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/buttons"
            android:text="@string/Seven"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"


            />
        <Button
            android:id="@+id/Eight"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:background="@drawable/buttons"
            android:text="@string/Eight"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"


            />
        <Button
            android:id="@+id/Nine"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:background="@drawable/buttons"
            android:text="@string/Nine"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/Multiple"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:background="@drawable/buttons"
            android:text="@string/multiple"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/four"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:text="@string/Four"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/five"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:text="@string/Five"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/six"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:text="@string/Six"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/substraction"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:text="@string/Substraction"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/one"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:text="@string/One"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/two"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:text="@string/two"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/three"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:text="@string/three"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/addition"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:text="@string/addition"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/Cancels"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:text="@string/Cancels"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/Zero"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:text="@string/Zero"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />

        <Button
            android:id="@+id/decimal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:text="@string/decimal"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/Equals"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="7dp"
            android:text="@string/equalsto"
            android:background="@drawable/buttons"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"

            />

    </LinearLayout>

</LinearLayout>
